                            <Line X1="0" Y1="0"
                                  X2="0" Y2="65"
                                  Stroke="Black"
                                  StrokeThickness="5"
                                  RelativePanel.AlignBottomWithPanel="True"/>
                            <Line X1="0" Y1="0"
                                  X2="0" Y2="65"
                                  Stroke="Black"
                                  StrokeThickness="5"
                                  RelativePanel.AlignBottomWithPanel="True"
                                  RelativePanel.AlignRightWithPanel="True"/>
                        </RelativePanel>
                        <RelativePanel Grid.Row="3"
                                       Grid.Column="0">
                            <TextBlock Text="C"
                                       Foreground="Blue"
                                       Style="{StaticResource Titulo}"
                                       RelativePanel.AlignHorizontalCenterWithPanel="True"
                                       RelativePanel.AlignVerticalCenterWithPanel="True"/>
                            <Line X1="0" Y1="0"
                                  X2="100" Y2="0"
                                  Stroke="Black"
                                  StrokeThickness="5"/>
                            <Line X1="0" Y1="0"
                                  X2="100" Y2="0"
                                  Stroke="Black"
                                  StrokeThickness="5"
                                  RelativePanel.AlignBottomWithPanel="True"/>
